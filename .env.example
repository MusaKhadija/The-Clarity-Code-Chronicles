# StacksQuest Environment Configuration

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/stacksquest_db"
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_NAME="stacksquest_db"
DATABASE_USER="username"
DATABASE_PASSWORD="password"

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV="development"
PORT="3001"
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:3001"

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# =============================================================================
# STACKS BLOCKCHAIN CONFIGURATION
# =============================================================================
# Network: "testnet" or "mainnet"
STACKS_NETWORK="testnet"
STACKS_API_URL="https://stacks-node-api.testnet.stacks.co"

# Contract deployment (replace with your actual addresses)
CONTRACT_ADDRESS="ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM"
CONTRACT_NAME="nft-badges"

# =============================================================================
# STACKS WALLET CONFIGURATION
# =============================================================================
# App details for wallet connection
APP_NAME="StacksQuest"
APP_ICON_URL="http://localhost:3000/icon-192x192.png"

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL="info"
LOG_FILE="logs/stacksquest.log"

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN="http://localhost:3000"

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_SECRET="your-session-secret-change-this-in-production"

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Set to "true" to enable detailed API logging
DEBUG_API="false"

# Set to "true" to enable mock data for development
USE_MOCK_DATA="false"
